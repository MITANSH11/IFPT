<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="442.0" prefWidth="537.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calc.calcappfx.SipController">

    <!-- Monthly Investment Input -->
    <Label layoutX="35.0" layoutY="58.0" text="Monthly Investment (₹):" />
    <TextField fx:id="monthlyInvestmentField" layoutX="192.0" layoutY="54.0" prefWidth="200.0" />

    <!-- Expected Annual Return Rate -->
    <Label layoutX="35.0" layoutY="102.0" text="Annual Return Rate (%):" />
    <TextField fx:id="returnRateField" layoutX="192.0" layoutY="98.0" prefWidth="200.0" />

    <!-- Investment Period -->
    <Label layoutX="29.0" layoutY="143.0" prefHeight="18.0" prefWidth="137.0" text="Investment Period (years):" />
    <TextField fx:id="investmentPeriodField" layoutX="192.0" layoutY="139.0" prefWidth="200.0" />

    <!-- Calculate Button -->
    <Button fx:id="calculateButton" layoutX="190.0" layoutY="181.0" onAction="#calculateSIP" text="Calculate" />

    <!-- Results -->
    <Label layoutX="44.0" layoutY="270.0" text="Total Investment (₹):" />
    <Label fx:id="totalInvestmentLabel" layoutX="180.0" layoutY="270.0" text="0.00" />

    <Label layoutX="37.0" layoutY="300.0" prefHeight="18.0" prefWidth="119.0" text="Estimated Returns (₹):" />
    <Label fx:id="estimatedReturnsLabel" layoutX="181.0" layoutY="300.0" text="0.00" />

    <Label layoutX="72.0" layoutY="334.0" text="Total Value (₹):" />
    <Label fx:id="totalValueLabel" layoutX="181.0" layoutY="334.0" text="0.00" />

    <!-- Back Button -->
    <Button fx:id="backButton" layoutX="10.0" layoutY="13.0" onAction="#backToMain" text="Back" />
</AnchorPane>
